@model IEnumerable<ObligatorioProgramacion3.Models.Socio>

@{
    ViewData["Title"] = "Index"; // Establece el título de la página como "Index"
}

<link rel="stylesheet" href="~/css/socios.css" asp-append-version="true" />

<h4 class="display-4 text-center">Socios</h4>

<p class="text-left">
    <a asp-action="Create" class="btn btn-principal">Agregar</a> <!-- Enlace para agregar un nuevo socio -->
</p>

<form asp-action="FilterByTipoSocio" method="get" class="form-row d-flex justify-content-center mb-2">
    <!-- Formulario para filtrar por tipo de socio y local asociado -->
    <div class="form-group col-md-3 mb-2">
        <label for="tipoSocioId" class="control-label">Filtrar por Tipo de Socio</label>
        <select id="tipoSocioId" name="tipoSocioId" class="form-control custom-select" asp-items="ViewBag.tipoSocioId">
        </select>
    </div>
    <div class="form-group col-md-3 mb-2">
        <label for="localAsociadoId" class="control-label">Filtrar por Local</label>
        <select id="localAsociadoId" name="localAsociadoId" class="form-control custom-select" asp-items="ViewBag.LocalAsociadoId">
        </select>
    </div>
    <div class="form-group col-md-2 align-self-end">
        <input type="submit" value="Filtrar" class="btn btn-principal btn-md" /> <!-- Botón para filtrar los resultados -->
    </div>
</form>


<div class="table-container">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>Tipo</th>
                <th>Local Asociado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- Itera sobre los socios y muestra la información en la tabla -->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td> <!-- Muestra el email del socio -->
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td> <!-- Muestra el nombre del socio -->
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td> <!-- Muestra el apellido del socio -->
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td> <!-- Muestra el teléfono del socio -->
                    <td>@Html.DisplayFor(modelItem => item.TipoSocio.Nombre)</td> <!-- Muestra el tipo de socio -->
                    <td>@Html.DisplayFor(modelItem => item.LocalAsociado.Nombre)</td> <!-- Muestra el local asociado -->
                    <td class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-primary">Ver</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-primary">Eliminar</a> |
                        <a asp-action="AsignarRutina" asp-route-id="@item.Id" class="text-primary">Asignar Rutina</a> <!-- Enlaces para acciones adicionales sobre el socio -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
