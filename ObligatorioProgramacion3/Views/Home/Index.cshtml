@{
    ViewData["Title"] = "Home Page"; // Establece el título de la página en "Home Page"
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <!-- Primer elemento del carrusel, marcado como activo -->
        <div class="carousel-item active">
            <img src="~/images/01.jpg" class="d-block w-100" alt="..."> <!-- Imagen 1 del carrusel -->
        </div>
        <!-- Segundo elemento del carrusel -->
        <div class="carousel-item">
            <img src="~/images/02.jpg" class="d-block w-100" alt="..."> <!-- Imagen 2 del carrusel -->
        </div>
        <!-- Tercer elemento del carrusel -->
        <div class="carousel-item">
            <img src="~/images/03.jpg" class="d-block w-100" alt="..."> <!-- Imagen 3 del carrusel -->
        </div>
        <!-- Cuarto elemento del carrusel -->
        <div class="carousel-item">
            <img src="~/images/04.jpg" class="d-block w-100" alt="..."> <!-- Imagen 4 del carrusel -->
        </div>
    </div>
    <div class="carousel-caption d-flex align-items-center justify-content-center">
        <!-- Texto superpuesto en el centro del carrusel -->
        <h1 class="display-4 title-shadow text-center">Gimnasio 24</h1>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializa el carrusel cuando el documento está listo
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 1500, // Intervalo de 1.5 segundos entre deslizamientos
                ride: 'carousel' // Inicia el carrusel automáticamente
            });
        });
    </script>
}
