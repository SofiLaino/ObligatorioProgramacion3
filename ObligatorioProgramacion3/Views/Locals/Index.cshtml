@model IEnumerable<ObligatorioProgramacion3.Models.Local>

@{
    ViewData["Title"] = "Index"; // Establece el título de la página en "Index"
}


<link rel="stylesheet" href="~/css/locales.css" asp-append-version="true" /> <!-- Enlace al archivo CSS personalizado -->

<h4 class="display-4 text-center">Locales</h4> <!-- Encabezado principal de la página -->

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-principal btn-lg">Agregar</a> <!-- Botón para agregar un nuevo local -->
    </p>
    <div class="table-container">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre) <!-- Encabezado de columna para "Nombre" -->
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion) <!-- Encabezado de columna para "Dirección" -->
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono) <!-- Encabezado de columna para "Teléfono" -->
                    </th>
                    <th>
                        Responsable <!-- Encabezado de columna para "Responsable" -->
                    </th>
                    <th>
                        Ciudad <!-- Encabezado de columna para "Ciudad" -->
                    </th>
                    <th></th> <!-- Columna para acciones -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre) <!-- Muestra el valor del campo "Nombre" -->
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion) <!-- Muestra el valor del campo "Dirección" -->
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono) <!-- Muestra el valor del campo "Teléfono" -->
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Responsable.Nombre) <!-- Muestra el nombre del responsable -->
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad.Nombre) <!-- Muestra el nombre de la ciudad -->
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary">Editar</a> | <!-- Enlace para editar el local -->
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-primary">Ver</a> | <!-- Enlace para ver detalles del local -->
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-primary">Eliminar</a> <!-- Enlace para eliminar el local -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
