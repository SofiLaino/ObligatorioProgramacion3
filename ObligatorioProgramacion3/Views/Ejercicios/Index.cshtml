@model IEnumerable<ObligatorioProgramacion3.Models.Ejercicio>

@{
    ViewData["Title"] = "Index";
}

<!-- Enlace al nuevo archivo CSS -->
<link rel="stylesheet" href="~/css/ejercicios.css" asp-append-version="true" />

<div class="container">
    <h1 class="display-4 text-center">Ejercicios</h1>

    <p>
        <a asp-action="Create" class="btn btn-principal btn-lg">Agregar</a>
    </p>
    <div class="table-container">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        Maquina
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Maquina.Nombre)
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-primary">Ver</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-primary">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
