@model ObligatorioProgramacion3.Models.Ejercicio

@{
    ViewData["Title"] = "Delete"; // Establece el título de la página en "Eliminar"
}

<link rel="stylesheet" href="~/css/ejercicios.css" asp-append-version="true" />

<h4 class="display-4 text-center">Eliminar Ejercicio</h4> <!-- Título de la sección -->
<hr />
<div class="container">
    <h4>Ejercicio</h4> <!-- Subtítulo para la sección de detalles del ejercicio -->
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre) <!-- Etiqueta para el campo Nombre -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre) <!-- Muestra el valor del campo Nombre -->
        </dd>
        <dt class="col-sm-2">
            Maquina <!-- Etiqueta para el campo Maquina -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Maquina.Nombre) <!-- Muestra el nombre de la máquina asociada -->
        </dd>
    </dl>
    <form asp-action="Delete">
        <!-- Formulario para confirmar la eliminación del ejercicio -->
        <input type="hidden" asp-for="Id" /> <!-- Campo oculto que contiene el Id del ejercicio -->
        <div class="form-group text-center mt-5">
            <input type="submit" value="Eliminar" class="btn btn-principal btn-md" /> <!-- Botón para confirmar la eliminación -->
            <a asp-action="Index" class="btn btn-secondary btn-md ml-2">Volver</a> <!-- Enlace para volver a la página de índice -->
        </div>
    </form>
</div>
